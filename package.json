{
  "name": "incridea-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "db:generate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:reset": "prisma db push --force-reset && prisma db seed",
    "dev": "tsx watch src/index.ts",
    "type": "tsc --noEmit",
    "start": "NODE_ENV=production tsx dist/src/index.js",
    "build": "prisma generate && tsx src/env.ts && eslint --cache . && tsc && cp -r src/templates dist/src",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix --cache .",
    "postinstall": "prisma generate",
    "mock": "tsx prisma/mock.ts",
    "format:check": "prettier --check --cache .",
    "format:write": "prettier --write --cache .",
    "prepare": "husky",
    "knip": "knip --cache"
  },
  "lint-staged": {
    "**/(*.ts|*.tsx)": [
      "eslint",
      "prettier --write --ignore-unknown --cache"
    ],
    "**/!(*.ts|*.tsx)": [
      "prettier --write --ignore-unknown --cache"
    ]
  },
  "dependencies": {
    "@escape.tech/graphql-armor-block-field-suggestions": "^3.0.0",
    "@escape.tech/graphql-armor-cost-limit": "^2.4.0",
    "@escape.tech/graphql-armor-max-aliases": "^2.6.0",
    "@escape.tech/graphql-armor-max-depth": "^2.4.0",
    "@escape.tech/graphql-armor-max-directives": "^2.3.0",
    "@escape.tech/graphql-armor-max-tokens": "^2.5.0",
    "@graphql-yoga/node": "^3.9.1",
    "@graphql-yoga/plugin-disable-introspection": "^2.12.0",
    "@pothos/core": "^4.3.0",
    "@pothos/plugin-errors": "^4.2.0",
    "@pothos/plugin-prisma": "^4.4.0",
    "@pothos/plugin-relay": "^4.3.0",
    "@pothos/plugin-smart-subscriptions": "^4.1.1",
    "@prisma/client": "^6.3.1",
    "@t3-oss/env-core": "^0.12.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.3",
    "graphql-yoga": "^5.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "node-html-to-image": "^5.0.0",
    "nodemailer": "^6.10.0",
    "pusher": "^5.2.0",
    "razorpay": "^2.9.5",
    "twilio": "^5.4.3",
    "uploadthing": "^7.4.4",
    "uuid": "^11.0.5",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^8.56.10",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "8.57.1",
    "husky": "^9.1.7",
    "knip": "^5.43.6",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
